<idea-plugin>
    <id>com.yandex.yatagan.intellij</id>
    <name>Dagger Lite</name>
    <vendor>Yandex LLC</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider
                language="UAST"
                implementationClass="com.yandex.yatagan.intellij.ComponentLineMarkerProvider"
        />

        <notificationGroup id="YG Notification Group"
                           displayType="BALLOON"/>
        <toolWindow
                factoryClass="com.yandex.yatagan.intellij.ui.ToolWindowFactoryImpl"
                id="Yatagan"
                anchor="right"
                icon="/icons/icon.svg"
                doNotActivateOnStart="true"
                secondary="true"
        />
    </extensions>
    <projectListeners>
        <listener class="com.yandex.yatagan.intellij.ui.ToolWindowListener"
                  topic="com.intellij.openapi.wm.ex.ToolWindowManagerListener"/>
    </projectListeners>
    <actions>
        <group id="com.yandex.yatagan.intellij.EditorPopupMenu"
               class="com.yandex.yatagan.intellij.actions.YataganActionsGroup"
               popup="true"
               text="Yatagan">
            <add-to-group group-id="EditorPopupMenu"/>
            <action class="com.yandex.yatagan.intellij.actions.FindYataganBindingsAction"
                    text="Find Bindings Across Components"
                    icon="AllIcons.Actions.Find"
            />
        </group>

