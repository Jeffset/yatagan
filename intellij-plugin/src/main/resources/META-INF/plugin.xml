<idea-plugin>
    <id>com.yandex.yatagan.intellij</id>
    <name>Dagger Lite</name>
    <vendor>Yandex LLC</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider
                language="UAST"
                implementationClass="com.yandex.yatagan.intellij.ComponentLineMarkerProvider"
        />

        <notificationGroup id="YG Notification Group"
                           displayType="BALLOON"/>
        <toolWindow
                factoryClass="com.yandex.yatagan.intellij.ToolWindowFactoryImpl"
                id="fpp.abr"
                anchor="right"
                secondary="true"
        />
    </extensions>
    <actions>
        <group id="Yatagan" text="Yatagan" description="Yatagan related actions">
            <add-to-group group-id="MainMenu" anchor="after" relative-to-action="ToolsMenu"/>
        </group>
        <action id="com.yandex.yatagan.intellij.YataganBrowseModulesHierarchy"
                class="com.yandex.yatagan.intellij.YataganBrowseModulesHierarchy" text="Show Yatagan Modules Hierarchy"
                description="Shows Yatagan included modules hierarchy for a component or a module.">
            <add-to-group group-id="Yatagan" anchor="last"/>
        </action>

        <action class="com.yandex.yatagan.intellij.SwitchFlattenedModulesAction" id="Yatagan.ModulesHierarchy.Flattened"/>
        <action class="com.yandex.yatagan.intellij.SwitchModulesHierarchyAction" id="Yatagan.ModulesHierarchy.Hierarchy"/>
    </actions>
</idea-plugin>